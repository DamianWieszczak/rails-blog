<div class="container mt-3 mb-4">
  <div class="row justify-content-md-center font-italic">
    <div class="col-6 mt-2">
      <div class="card text-center ">
        <div class="card-header">
            <div class="card-body">
              <%= form_with model: [ @article, @article.comments.build ] do |form| %>
                <div class="form-group row">
                  <%= form.label :commenter, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                    <%= form.text_field :commenter, class: "form-control shadow rounded", placeholder: "Your name" %>
                  </div>
                </div>
                <div class="form-group row mt-3">
                    <%= form.label :body, class: "col-2 col-form-label text-light" %>
                    <div class="col-8">
                      <%= form.text_area :body, class: "form-control shadow rounded", placeholder: "Your comment" %>
                    </div>
                </div>
                <div class="form-group justify-content-center mt-4 text-center">
                  <%= form.submit class: "btn btn-outline-warning btn-lg" %>
                </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div> 