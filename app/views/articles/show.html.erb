<h1 class="text-center mt-5" id="main-header"><%= @article.title %></h1>

<div class="container">
  <div class="row justify-content-md-center font-italic">
    <div class="col-8 mt-3">
      <div class="card text-center ">
        <div class="card-header">
          by user
        </div>
        <div class="card-body">
          <h5 class="card-title">Description</h5>
          <p class="card-text"><%= simple_format(@article.description) %></p>
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", article_path(@article), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
          <%= link_to "Back", articles_path, class: "btn btn-sm btn-info" %>
        </div>
        <div class="card-footer text-muted">
          <small> Created <%= time_ago_in_words(@article.created_at) %> ago,
                  Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
  </div>
</div>

<h2 class="text-center mt-5" id="main-header">Comments</h2>
<h5 class="card-title"><%= render @article.comments %></h5>


<h2 class="text-center mt-5" id="main-header">Add a comment:</h2>
<%= render 'comments/form' %>

