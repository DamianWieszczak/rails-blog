<div class="container">
  <% object.each do |article| %>
    <div class="row justify-content-md-center font-italic">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
              <% if article.user %>
                by <%= link_to article.user.username, user_path(article.user) %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, articles_path(article), class: "text-warning text-decoration-none" %></h5>
                <p class="card-text"><%= truncate(simple_format(article.description), length: 100) %></p><br><hr>
                <%= link_to "View", article_path(article), class: "btn btn-outline-primary" %>
                <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-warning" %>
                <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small> Created <%= time_ago_in_words(article.created_at) %> ago,
                      Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
            <div class="card-footer text-muted">
              <span><%= article.comments.count %> comments</span>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>